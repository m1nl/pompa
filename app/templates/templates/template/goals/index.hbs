<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-md-4 col-sm-4 col-xs-7">Name</th>
      <th class="col-md-4 hidden-sm hidden-xs">Description</th>
      <th class="col-md-1 col-sm-2 col-xs-3">Score</th>
      <th class="col-md-2 col-sm-3 hidden-xs">Code</th>
      <th class="col-md-1 col-sm-2 col-xs-2 text-center">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each (persisted-records sortedGoals) as |goal|}}
    <tr>
      <td class="col-md-4 col-sm-4 col-xs-7">{{goal.name}}</td>
      <td class="col-md-4 hidden-sm hidden-xs">{{when-empty goal.description "None"}}</td>
      <td class="col-md-1 col-sm-2 col-xs-3">{{goal.score}}</td>
      <td class="col-md-2 col-sm-3 hidden-xs text-mono">{{goal.code}}</td>
      <td class="col-md-1 col-sm-2 col-xs-2 text-center">
        {{#link-to "templates.template.goals.goal.edit" goal}}{{fa-icon "edit"}}{{/link-to}}
        {{#link-to "templates.template.goals.goal.delete" goal}}{{fa-icon "trash"}}{{/link-to}}
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
